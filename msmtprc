
# defaults for all accounts
defaults

auth on
tls on
#tls_trust_file /etc/ssl/certs/ca-certificates.crt
tls_trust_file /etc/ssl/ca-bundle.pem
logfile ~/.msmtp.log


# Gmail account
account gmail

