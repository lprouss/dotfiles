# ~/.inputrc: user's inputrc for libreadline

##----------------------------------------------------------------------------##
## configure readline
##----------------------------------------------------------------------------##
# use the vi editing mode instead of the default emacs mode
set editing-mode vi

# disable the terminal bell
set bell-style none

# case-insensitive filename matching and completion
set completion-ignore-case on

# do not display ambiguous matching options immediately
set show-all-if-ambiguous off
set show-all-if-unmodified off

# do not duplicate text already present when completing a word
set skip-completed-text on

# include character denoting filetype for completions
#set colored-stats on
set visible-stats on

# maximum number of lines in the history file
set history-size 5000

# append a slash to directories names and symbolic links to directories
set mark-directories on
set mark-symlinked-directories on

# show the editing mode in prompt
#set show-mode-in-prompt on

# useful settings for utf-8
set input-meta on
set output-meta on
set convert-meta off

# search history for the inputed string
"\e[A": history-search-backward
"\e[B": history-search-forward

# move quickly between words
"\eOd": backward-word
"\eOc": forward-word

# disable the display of control characters
#set echo-control-characters off

# make tab cycle through completion options
#"\t": menu-complete

# vi keymap
set keymap vi

