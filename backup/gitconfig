# user name and email and github account information
[user]
    name = Louis-Philippe Rousseau
    email = lprouss@gmail.com
[github]
    user = lprouss
    ;token = token

# core configuration
[core]
    autocrlf = input
    excludesFile = ~/.gitignore
    editor = vim
    pager = less
    whitespace = trailing-space,space-before-tab

# settings for an external credential helper
[credential]
    ;username = lprouss
    helper = cache --timeout=1800

# colors configuration
[color]
    ui = auto

# columns outputs configuration
[column]
    ui = auto

# git-branch settings
[branch]
    autoSetupMerge = true
    autoSetupRebase = always

# git-diff and diff tool settings
[diff]
    mnemonicPrefix = true
    renames = copies
    submodule = log
    ;tool = vimdiff
[difftool]
    prompt = false

# git-merge and merge tool settings
[merge]
    conflictStyle = merge
    ff = true
    stat = true
    tool = diffuse
[mergetool]
    prompt = false
    keepBackup = false

# git-push settings
[push]
    default = simple

# git-rebase settings
[rebase]
    stat = true
    autosquash = true

# git-rerere settings (reuse recorded conflicts resolution)
[rerere]
    enabled = true
    autoUpdate = true

# git-log settings
[log]
    abbrevCommit = false
    decorate = short
    showRoot = true

# git-status settings
[status]
    short = true
    branch = false
    showUntrackedFiles = normal
    submoduleSummary = false

# git help settings
[help]
    autoCorrect = 10

# user-defined aliases
[alias]
    st = status
    ma = checkout master
    co = checkout
    br = branch
    up = pull
    last = log -1 HEAD
    unstage = reset HEAD --
    sgraph = log --graph --pretty=format:'%Cred%h%Creset %ae %C(yellow)%d%Creset - %s' --abbrev-commit --date=relative
    wdiff = diff --color-words
    report = log --format='+ %h <%ad>: %s (%an)' --no-merges --date=short

